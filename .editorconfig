# EditorConfig: http://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# 2 space indentation
[*.{c,h,js,css,html,json,xml,yaml,yml}]
indent_style = space
indent_size = 2

# Tab indentation
[Makefile*]
indent_style = tab

# Ignore paths
[*.md]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset
